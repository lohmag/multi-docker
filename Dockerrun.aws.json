{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
      {
        "name": "client",
        "image": "lohmag/multi-client",
        "hostname": "client",
        "essential": false,
        "containerDefinitions": [{
          "MemoryReservation": "256"
        }]
      },
      {
        "name": "server",
        "image": "lohmag/multi-server",
        "hostname": "api",
        "essential": false
      },
      {
        "name": "worker",
        "image": "lohmag/multi-worker",
        "hostname": "worker",
        "essential": false
      },
      {
        "name": "nginx",
        "image": "lohmag/multi-nginx",
        "hostname": "nginx",
        "essential": true,
        "portMappings": [
          {
            "hostPort": 80,
            "containerPort": 80
          }
        ],
        "links": ["client", "server"]
      }
    ]
}
